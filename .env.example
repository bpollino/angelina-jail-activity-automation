# Environment Configuration Template
# Copy this to .env for local development (DO NOT commit .env to GitHub)

# Development Mode
NODE_ENV=development
LOCAL_DEV=true

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=appBn4Xs7GdnheynS
AIRTABLE_TABLE_NAME=Angelina County Jail Activity
AIRTABLE_AD_TABLE_NAME=Advertisements

# Ghost Configuration  
GHOST_SITE_URL=https://www.angelina411.com
GHOST_ADMIN_API_KEY=your_ghost_admin_api_key_here
GHOST_API_URL=https://angelina-411.ghost.io

# Local Development Server
LOCAL_PORT=3000
LOCAL_HOST=localhost

# Production GitHub Secrets Required:
# - AIRTABLE_API_KEY
# - AIRTABLE_BASE_ID (optional, defaults to appBn4Xs7GdnheynS)
# - AIRTABLE_TABLE_NAME (optional, defaults to "Angelina County Jail Activity")
# - GHOST_ADMIN_API_KEY
# - GHOST_API_URL (optional, defaults to https://angelina-411.ghost.io)

# Development Options
USE_MOCK_DATA=true
DEBUG_MODE=true
SKIP_GHOST_PUBLISH=true

# Optional: Override article date (YYYY-MM-DD format)
ARTICLE_DATE=2023-12-19

# API Key format examples:
# Airtable API Key: keyXXXXXXXXXXXXXX
# Airtable Base ID: appXXXXXXXXXXXXXX  
# Ghost Admin API Key: XXXXXXXXXXXXXXXXXXXXXXXX:XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX